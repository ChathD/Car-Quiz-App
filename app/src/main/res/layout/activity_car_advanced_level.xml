<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarAdvancedLevel">

    <ImageView
        android:id="@+id/imgAdvanced1"
        android:layout_width="175dp"
        android:layout_height="148dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/advancedLvlEdit"
        android:layout_width="165dp"
        android:layout_height="52dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imgAdvanced1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgAdvanced2"
        android:layout_width="175dp"
        android:layout_height="148dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAdvanced1"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/advancedLvlEdit2"
        android:layout_width="165dp"
        android:layout_height="52dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imgAdvanced2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advancedLvlEdit"
        app:layout_constraintVertical_bias="0.711" />

    <ImageView
        android:id="@+id/imgAdvanced3"
        android:layout_width="175dp"
        android:layout_height="148dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAdvanced2"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/advancedLvlEdit3"
        android:layout_width="165dp"
        android:layout_height="52dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imgAdvanced3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advancedLvlEdit2"
        app:layout_constraintVertical_bias="0.839" />

    <Button
        android:id="@+id/AdvancedLvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAdvanced3" />

</androidx.constraintlayout.widget.ConstraintLayout>